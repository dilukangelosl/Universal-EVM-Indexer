{
  "chain": {
    "chainId": 33139,
    "rpcEndpoints": ["https://rpc.apechain.com"],
    "startBlock": 0,
    "blockTimeMs": 1000
  },
  "indexer": {
    "batchSize": 50,
    "processingBatchSize": 3000,
    "bundleSize": 1000,
    "maxConcurrentBatches": 60,
    "pollIntervalMs": 2000,
    "checkpointIntervalBlocks": 1000,
    "mergePartialBundles": true,
    "backupIntervalMs": 300000
  },
  "storage": {
    "dataDir": "./run-data",
    "oneBlocksDir": "./run-data/one-blocks",
    "leveldbPath": "./run-data/leveldb"
  },
  "s3": {
    "bucket": "apechain-indexer",
    "region": "us-east-005",
    "prefix": "apechain-mainnet",
    "endpoint": "https://s3.us-east-005.backblazeb2.com",
    "maxRetries": 3
  },
  "logging": {
    "level": "info",
    "format": "pretty"
  }
}
